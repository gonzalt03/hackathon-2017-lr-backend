<div class="container-fluid">
    {{#if messages.success}}
        <div role="alert" class="alert alert-success">
            {{#each messages.success}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    {{#if messages.error}}
        <div role="alert" class="alert alert-danger">
            {{#each messages.error}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    {{#if messages.info}}
        <div role="alert" class="alert alert-info">
            {{#each messages.info}}
                <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
    <div class="row">
        <div class="col-sm-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-1"><h3>GET</h3></div>
                        <div class="row">
                            <form action="/get-data" method="get">
                                <div class="form-group">
                                    <div class="input">
                                        <label for="title">URL</label>
                                        <input class="form-control" type="text" id="url" name="url"
                                               placeholder="URL du webservice">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-default">GET DATA</button>
                            </form>
                        </div>
                    </div>
                {{# if items.message}}
                    <p>{{items.message}}</p>
                {{else}}
                    <p>ERROR</p>
                {{/if}}
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12"><h3>INSERT</h3></div>
                    </div>
                    <div class="row">
                        <form action="/post-data" method="post">
                            <div class="form-group">
                                <div class="input">
                                    <label for="title">Name</label>
                                    <input class="form-control" type="text" id="title" name="name"
                                           placeholder="Nom du document">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input">
                                    <label for="mail">Mail</label>
                                    <input class="form-control" type="text" id="mail" name="mail"
                                           placeholder="Email de l'auteur">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input">
                                    <label for="value">Commentaire</label>
                                    <input class="form-control" type="text" id="value" name="value"
                                           placeholder="Commentaire">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default">INSERT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12"><h3>UPDATE</h3></div>
                    </div>
                    <div class="row">
                        <form action="/update-data" method="post">
                            <div class="form-group">
                                <div class="input">
                                    <label for="name">Name</label>
                                    <input class="form-control" type="text" id="name" name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input">
                                    <label for="mail">Mail</label>
                                    <input class="form-control" type="text" id="mail" name="mail">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default">UPDATE</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12"><h3>DELETE</h3></div>
                    </div>
                    <div class="row">
                        <form action="/delete-data" method="post">
                            <div class="form-group">
                                <div class="input">
                                    <label for="mail">Mail</label>
                                    <input class="form-control" type="text" id="mail" name="mail">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default">DELETE</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>